<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">
    <ImageView
        android:id="@+id/iv_message_avatar"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_message_lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_message_avatar"
        android:layout_alignBottom="@id/iv_message_avatar"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="你我他你我他你我他你我他"
        android:textSize="@dimen/sp_16"/>
    <TextView
        android:id="@+id/tv_message_lastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="15:43"
        android:textSize="@dimen/sp_16"/>
</RelativeLayout>