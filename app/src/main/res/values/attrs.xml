<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BezierLoadingView">
        <attr name="lv_external_radius" format="dimension" />
        <attr name="lv_internal_radius" format="dimension" />
        <attr name="lv_duration" format="integer" />
        <attr name="lv_start_color" format="color" />
        <attr name="lv_end_color" format="color" />
    </declare-styleable>
    <declare-styleable name="IndexBar">
        <attr name="scaleSize" format="integer" />
        <attr name="scaleItemCount" format="integer" />
        <attr name="scaleWidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowCenter" format="boolean" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>
</resources>